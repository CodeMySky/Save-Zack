		/* 内容中的表格 */
		td, th {
			padding: 0px 10px;
			border: 1px solid #ddd;
		}
		/* 阶段验证结果 */
		.work>div.alert {
			position: absolute;
			right: 0;
			left: 0;
			bottom: 27px;
			display: block;
			z-index: 4;
		}
		.work>div.alert>span.description{
			font-weight: bold;
		}
		.work>div.alert-error>span.description{
			float: left;
		}
		/* 删除文件图标 */
		.work-tabs-wrap>li {
			position: relative;
		}
		.work-tabs-wrap>li i.icon-minus {
			position: absolute;
			z-index: 5;
			top: 0;
			right: 4px;
			opacity: .5;
			display: none;
			cursor: pointer;
		}
		.work-tabs-wrap>li:hover i.icon-minus {
			display: inline-block;
		}
		.work-tabs-wrap>li:hover i.icon-minus:hover {
			opacity: 1;
		}
	</style>

